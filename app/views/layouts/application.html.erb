<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash.any? %>
      <%= render 'layouts/flash' %>
    <% end %>
    <%= link_to 'Users list', users_path %>
    <% if  current_user %>
      <%= button_to 'Sign out', destroy_user_session_path,  method: :delete, form: { data: { turbo: false } } %>
      <% incoming_requests = current_user.incoming_requests.size %>
      <% if incoming_requests > 0 %>
        <%= link_to "#{pluralize(incoming_requests, 'pending request')}", user_friendship_requests_path(current_user) %>
      <% end %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path %>
      <%= link_to 'Sign in', new_user_session_path %>
    <% end %>
    <%= link_to 'Home', root_path %>
    <%= yield %>
  </body>
</html>
