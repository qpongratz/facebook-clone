<header>
  <%= link_to 'Home', root_path, class: 'btn btn_dark' %>

  <% if  current_user %>
    <%= link_to 'Users list', users_path, class: 'btn btn_dark' %>

    <% incoming_requests = current_user.incoming_requests.size %>
    <% if incoming_requests > 0 %>
      <%= link_to "#{pluralize(incoming_requests, 'pending request')}", user_friendship_requests_path(current_user), class: 'btn btn_dark' %>
    <% else %>
      <%= link_to 'Manage friends', root_path, class: 'btn btn_dark'%>
    <% end %>

    <%= button_to 'Sign out', destroy_user_session_path,  method: :delete, form: { data: { turbo: false } }, class: 'btn btn_dark' %>
    <%= link_to current_user.name, edit_user_registration_path, class: 'btn btn_dark' %>
  <% else %>
    <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn_dark' %>
    <%= link_to 'Sign in', new_user_session_path, class: 'btn btn_dark'  %>
  <% end %>

</header>