
<% if @user == current_user %>
  <h2>Incoming Requests</h2>
  <%= render @pending_incoming %>
  <h2>Outgoing Requests</h2>
  <%= render @pending_outgoing %>
  <h2>Your Friends</h2>
<% else %>
  <h2><%= @user.name %>'s Friends</h2>
<% end %>

<%#= turbo_frame_tag 'friends_list' do %>
  <%= render @active_friends %>
<%# end %>