<%= turbo_frame_tag nested_dom_id(commentable, comment) %>
  <li class='comment' id="<%= dom_id comment %>">
    <p>
      <strong><%= comment.user.name %>:</strong>
    </p>

    <p>
      <%= comment.content %>
      <% if current_user == comment.user %>
        <div>
          <%= link_to "Edit this comment", [commentable, comment] %>

          <%= button_to "Destroy this comment", [commentable, comment], method: :delete %>
        </div>
      <% end %>
    </p>
    <%= turbo_frame_tag nested_dom_id(comment, 'new_comment') do %>
      <%= link_to 'Add a reply', new_comment_comment_path(comment) %>
    <% end %>
    <%= turbo_frame_tag nested_dom_id(comment, 'comments') do %>
      <%= link_to 'Show replies', comment_comments_path(comment) %>
    <% end %>
  </li>

