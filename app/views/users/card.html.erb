<%= turbo_frame_tag nested_dom_id(@user, 'card') do %>
  <%= link_to "#{@user.name}", @user, class: 'link', data: {turbo_frame: '_top'} %> <br>
  Personal information placeholder.
  <% unless @user.id == current_user.id%>
    <%= turbo_frame_tag nested_dom_id(@user, 'manage_friendship') do %>
      <%= render 'friendships/manage', user: @user %>
    <% end %>
  <% end %>
<% end %>
